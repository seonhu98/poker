        <Button x:Name="C_1" Content="이미지&#10;업로드" BorderBrush="{x:Null}" Opacity="0.7" Width="212" Height="207" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="42,106,0,0" FontFamily="./Font/#한컴 말랑말랑 Bold" FontSize="24" FontWeight="Bold" Foreground="#FF1F1F1F" IsCancel="True">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="200"/>
                </Style>
            </Button.Resources>
            <Button.Background>
                <ImageBrush ImageSource="/Resources/Alice.jpg" Opacity="1"/>
            </Button.Background>
        </Button>
        <Button x:Name="C_2" Content="" BorderBrush="{x:Null}" Opacity="0.7" Width="212" Height="207" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,106,0,0" FontFamily="./Font/#한컴 말랑말랑 Bold" FontSize="24" FontWeight="Bold" Foreground="#FF634B4B">
