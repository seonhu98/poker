                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="200"/>
                </Style>
            </Button.Resources>
            <Button.Background>
                <ImageBrush ImageSource="/Resources/Alice.jpg"/>
            </Button.Background>
        </Button>
        <Button x:Name="C_3" Content="" BorderBrush="{x:Null}" Opacity="0.7" Width="212" Height="207" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="542,106,0,0" FontFamily="./Font/#한컴 말랑말랑 Bold" FontSize="24" FontWeight="Bold" Foreground="#FF634B4B">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="200"/>
                </Style>
            </Button.Resources>
            <Button.Background>
                <ImageBrush ImageSource="/Resources/Alice.jpg" Opacity="1.2"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
